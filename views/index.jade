extend layout
block content
  each item in quotes
    p= item.quote
      |...
      span.badge.badge-default=item.name
      
block sidebar
  .widget
    h1 Form
    p
      | Below is a form,it consists of name and
      | quote fields please fill appropriatly.
    form(action="/quotes" method="POST")
      input(type="text" id="name" name="name" aria-describedby="name" placeholder="Enter name")
      textarea(id="quote" name="quote" aria-describedby="quote" placeholder="Quote")
      button.btn.btn-sm.btn-link(type="submit") submit
        
